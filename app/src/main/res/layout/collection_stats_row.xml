<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:paddingHorizontal="16dp">

    <TextView
        android:id="@+id/value_text_view"
        style="@style/Collection.Details.Heading1"
        android:layout_marginEnd="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/value_unit_text_view"
        style="@style/Collection.Details.Heading3"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/value_text_view"
        app:layout_constraintStart_toEndOf="@id/value_text_view" />

    <TextView
        android:id="@+id/value_name_text_view"
        style="@style/Collection.Details.Heading2"
        app:layout_constraintBottom_toBottomOf="@id/value_unit_text_view"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>